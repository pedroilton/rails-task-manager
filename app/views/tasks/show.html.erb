<div class="container">
  <h1><%= @task.title %></h1>
  <p><%= @task.details %></p>
  <p><%= 'Not ' unless @task.completed %>Completed!</p>
  <br>
  <%= link_to 'Delete', task_path(@task), method: :delete, data: { confirm: "Are you sure?" } %>
  <br>
  <%= link_to 'Edit task', edit_task_path(@task) %>
  <br>
  <%= link_to 'Back to list', tasks_path %>
</div>