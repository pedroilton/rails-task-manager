<div class="container">
  <h1>Tasks:</h1>

  <% @tasks.each do |task| %>
    <p><input type="checkbox" disabled <%= 'checked' if task.completed %>> <%= link_to task.title, task_path(task) %> - 
      <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></p>
  <% end %>
  <br>
  <%= link_to 'Add task', new_task_path %>
</div>